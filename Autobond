local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local hrp = character:WaitForChild("HumanoidRootPart")

-- Tên part hoặc model đại diện cho Bond
local BOND_NAME = "Bond"

while task.wait(0.5) do
	for _, bond in pairs(workspace:GetDescendants()) do
		if bond:IsA("BasePart") and bond.Name == BOND_NAME then
			hrp.CFrame = bond.CFrame + Vector3.new(0, 2, 0) -- Teleport đến trên Bond
			task.wait(0.1)
		end
	end
end
